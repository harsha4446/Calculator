<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.harsh.calculator.MainActivity">

    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sub"
        android:layout_alignBaseline="@+id/div"
        android:layout_alignBottom="@+id/div"
        android:layout_alignStart="@+id/add" />

    <Button
        android:text="CE"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:id="@+id/ce"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp" />

    <Button
        android:text="^"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ex"
        android:layout_alignBaseline="@+id/b"
        android:layout_alignBottom="@+id/b"
        android:layout_toEndOf="@+id/b"
        android:layout_marginStart="24dp" />

    <Button
        android:text="1/x"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/byx"
        android:layout_alignBaseline="@+id/ex"
        android:layout_alignBottom="@+id/ex"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <Button
        android:text="8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num8"
        android:layout_alignBaseline="@+id/button26"
        android:layout_alignBottom="@+id/button26"
        android:layout_alignStart="@+id/c" />

    <Button
        android:text="7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button26"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num5"
        android:layout_alignBaseline="@+id/num4"
        android:layout_alignBottom="@+id/num4"
        android:layout_alignStart="@+id/num8" />

    <Button
        android:text="/"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/div"
        android:layout_alignBaseline="@+id/num4"
        android:layout_alignBottom="@+id/num4"
        android:layout_alignStart="@+id/mul" />

    <Button
        android:text="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num1"
        android:layout_below="@+id/sub"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:text="6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num6"
        android:layout_alignBaseline="@+id/sub"
        android:layout_alignBottom="@+id/sub"
        android:layout_alignStart="@+id/num9" />

    <Button
        android:text="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num2"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignStart="@+id/num5" />

    <Button
        android:text="3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num3"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignStart="@+id/num6" />

    <Button
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button41"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignStart="@+id/sub" />

    <Button
        android:text="."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deci"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignStart="@+id/div" />

    <Button
        android:text="C"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/c"
        android:layout_marginStart="27dp"
        android:layout_alignBaseline="@+id/ce"
        android:layout_alignBottom="@+id/ce"
        android:layout_toEndOf="@+id/ce" />

    <Button
        android:text="<-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/b"
        android:layout_alignBaseline="@+id/c"
        android:layout_alignBottom="@+id/c"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:id="@+id/button39"
        android:layout_height="30dp"
        android:layout_below="@+id/num3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/num2" />

    <Button
        android:text="4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num4"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/num9"
        android:layout_alignParentStart="true" />

    <Button
        android:text="9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num9"
        android:layout_alignBaseline="@+id/button26"
        android:layout_alignBottom="@+id/button26"
        android:layout_toStartOf="@+id/ex" />

    <Button
        android:text="*"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mul"
        android:layout_alignBaseline="@+id/button26"
        android:layout_alignBottom="@+id/button26"
        android:layout_alignStart="@+id/ex" />

    <Button
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/add"
        android:layout_alignBaseline="@+id/button26"
        android:layout_alignBottom="@+id/button26"
        android:layout_alignStart="@+id/byx" />

    <Button
        android:text="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/num0"
        android:layout_alignTop="@+id/button39"
        android:layout_alignParentStart="true" />

</RelativeLayout>
